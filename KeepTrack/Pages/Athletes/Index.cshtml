@page
@model KeepTrack.Pages.Athletes.IndexModel
@section Styles{
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Index";
}

<section header>
    <div class="section-title-one">
        <div class="container">
            <div class="row table-heading">
                <div class="col-lg-12">
                    <div class="text-center">
                        <div class="content">
                            <h2 class="fw-bold">Athlete Overview</h2>
                            <p>
                                Keep track of all your athlete's. To view the workouts that they partake in, select the view button
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
<div class="container-table100">
        <div class="wrap-table100">
            <div class="table">
                <div class="row header">
                    <div class="cell">
                @Html.DisplayNameFor(model => model.Athlete[0].Name)
                    </div>
                    <div class="cell">
                @Html.DisplayNameFor(model => model.Athlete[0].Surname)
                    </div>
                    <div class="cell">
                @Html.DisplayNameFor(model => model.Athlete[0].Gender)
                    </div>
                    <div class="cell">
                @Html.DisplayNameFor(model => model.Athlete[0].StartDate)
                    </div>
                     <div class="cell">
                <p class="me-3 mb-3">
                    <a asp-page="Create" class="btn primary-btn-outline"> ADD NEW </a>
                </p>
                    </div>
                </div>
                @foreach (var item in Model.Athlete) {
                <div class="row">
                    <div class="cell">
                @Html.DisplayFor(modelItem => item.Name)
                    </div>
                    <div class="cell">
                    @Html.DisplayFor(modelItem => item.Surname)
                    </div>
                    <div class="cell">
                    @Html.DisplayFor(modelItem => item.Gender)
                    </div>
                    <div class="cell" >
                    @Html.DisplayFor(modelItem => item.StartDate)
                    </div>
                    <div class="cell">
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-fill"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="bi bi-search"></i></a>
                     <a asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-trash3-fill"></i></a>
                    </div>

                </div>
                }
            </div>
        </div>
</div>
</section>
    







