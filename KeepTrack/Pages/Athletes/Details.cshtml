@page
@model KeepTrack.Pages.Athletes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Athlete</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athlete.AthleteWorkouts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Workout Title</th>
                    <th>Personal Trainer</th>
                </tr>
                @foreach (var item in Model.Athlete.AthleteWorkouts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Workout.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Workout.PersonalTrainer)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Athlete?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
